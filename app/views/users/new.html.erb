<h1>Sign up</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for @user do |f| %>
      <%= f.label :name, 'Name' %>
      <%= f.text_field :name %>

      <%= f.label :email, 'Email' %>
      <%= f.email_field :email %>

      <%= f.submit 'Sign up', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>